                                <DataTemplate>
                                    <TextBox x:Name="dgTxtProductGrossTotalSalePrice" Text="{Binding GrossTotalSalePrice, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF002EFF" VerticalContentAlignment="Center" FontSize="15"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
