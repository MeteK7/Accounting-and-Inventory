        <Label x:Name="lblBalanceFrom" Content="" HorizontalAlignment="Left" Margin="483,175,0,0" VerticalAlignment="Top" Width="236" Height="28" Foreground="Red"/>
        <Label x:Name="lblBalanceTo" Content="" HorizontalAlignment="Left" Margin="483,236,0,0" VerticalAlignment="Top" Height="29" Width="236" Foreground="Red"/>
        <Label Content="UNDER CONSTRUCTION" HorizontalAlignment="Left" Margin="687,560,0,0" VerticalAlignment="Top" Width="354" Height="172" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="Red" FontSize="24" FontFamily="Constantia"/>

