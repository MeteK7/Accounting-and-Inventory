<Window x:Class="GUI.WinBank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="BANKS" Height="492" Width="668.557" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/Bank.jpg"/>
        </Grid.Background>
        <DockPanel x:Name="dpTop" Height="29" LastChildFill="False" Background="#FF3867D6" VerticalAlignment="Top">
            <Label x:Name="lblTop" Content="BANKS" Height="28.8" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Top" Foreground="White"/>
            <Button x:Name="btnClose" Content="" Margin="0,-28.8,0,-0.2" Height="29" Width="32" DockPanel.Dock="Top" HorizontalAlignment="Right" Click="btnClose_Click">
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF707070" Opacity="0"/>
                </Button.BorderBrush>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.117"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Icons/close.png"/>
                </Button.Background>
            </Button>
        </DockPanel>
        <Label x:Name="lblBankId" Content="ID" HorizontalAlignment="Left" Margin="16,53,0,0" VerticalAlignment="Top" Width="66"/>
        <Label x:Name="lblBankName" Content="NAME" HorizontalAlignment="Left" Margin="16,92,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="txtBankId" HorizontalAlignment="Left" Height="26" Margin="82,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.85"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="txtBankName" HorizontalAlignment="Left" Height="26" Margin="82,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.85"/>
            </TextBox.Background>
        </TextBox>
        <DataGrid x:Name="dtgBanks" HorizontalAlignment="Left" Height="390" Margin="285,92,0,0" VerticalAlignment="Top" Width="374" MouseLeftButtonUp="dtgBanks_MouseLeftButtonUp" KeyUp="dtgBanks_KeyUp" KeyDown="dtgBanks_KeyDown">
            <DataGrid.Background>
                <SolidColorBrush Color="#FFF0F0F0" Opacity="0.85"/>
            </DataGrid.Background>
        </DataGrid>
        <Label x:Name="lblBankSearch" Content="SEARCH" HorizontalAlignment="Left" Margin="272,53,0,0" Width="62" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtBankSearch" HorizontalAlignment="Left" Height="26" Margin="334,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" VerticalContentAlignment="Center" TextChanged="txtBankSearch_TextChanged">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.85"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnAdd" Content="ADD" HorizontalAlignment="Left" Margin="25,433,0,0" VerticalAlignment="Top" Width="75" Height="49" Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate" Content="UPDATE" HorizontalAlignment="Left" Margin="105,433,0,0" VerticalAlignment="Top" Width="75" Height="49" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="DELETE" HorizontalAlignment="Left" Margin="185,433,0,0" VerticalAlignment="Top" Width="75" Height="49" Click="btnDelete_Click"/>
    </Grid>
</Window>

