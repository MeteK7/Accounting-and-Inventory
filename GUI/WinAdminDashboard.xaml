                        <Button.Background>
                            <ImageBrush ImageSource="/Images/Buttons/system-preferences.png" Stretch="Uniform">
                                <ImageBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.35" CenterX="0.5" ScaleX="0.7" ScaleY="0.7"/>
                                        <SkewTransform CenterY="0.35" CenterX="0.5"/>
                                        <RotateTransform CenterY="0.35" CenterX="0.5"/>
