                    </Grid.Background>
                    <Button Style="{StaticResource ButtonCloseStyle}" x:Name="btnClose" Content="" Height="67" Width="66" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="btnClose_Click" HorizontalAlignment="Left" Margin="937,0,0,0">
                        <Button.BorderBrush>
                            <SolidColorBrush Color="#FF707070" Opacity="0"/>
                        </Button.BorderBrush>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.117"/>
                                <TranslateTransform X="0.013" Y="-0.028"/>
                            </TransformGroup>
